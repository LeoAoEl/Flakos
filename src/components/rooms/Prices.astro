---
interface Props {
  regularPrice: string;
  specialPrice: string;
  peakPrice: string;
}
const { regularPrice, specialPrice, peakPrice } = Astro.props;
---

<div class="py-10">
  <div>
    <h1
      class="text-2xl md:text-4xl font-semibold text-center text-textColor capitalize"
    >
      Pricing Plan
    </h1>

    <p class="max-w-2xl mx-auto mt-4 text-center xl:mt-6 text-textColor">
      Lorem ipsum, dolor sit amet consectetur adipisicing elit. Alias quas magni
      libero consequuntur voluptatum velit amet id repudiandae ea, deleniti
      laborum in neque eveniet.
    </p>

    <div
      class="grid grid-cols-1 gap-8 mt-6 xl:mt-12 xl:gap-12 md:grid-cols-2 lg:grid-cols-3"
    >
      <div
        class="w-full p-8 space-y-8 text-center border border-naranja rounded-lg"
      >
        <p class="font-medium uppercase text-textColor">Temporada Alta</p>

        <h2 class="text-4xl font-semibold text-textColor uppercase">
          ${peakPrice}
        </h2>

        <p class="font-medium text-textColor">Por noche</p>

        <button
          class="w-full px-4 py-2 mt-10 tracking-wide text-white capitalize transition-colors duration-300 transform bg-naranja rounded-md hover:bg-verde focus:outline-none focus:bg-blue-500 focus:ring focus:ring-blue-300 focus:ring-opacity-80"
        >
          Reservar ahora
        </button>
      </div>

      <div class="w-full p-8 space-y-8 text-center bg-naranja rounded-lg">
        <p class="font-medium text-gray-200 uppercase">Precio Regular</p>

        <h2 class="text-5xl font-bold text-white uppercase">${regularPrice}</h2>

        <p class="font-medium text-gray-200">Por noche</p>

        <button
          class="w-full px-4 py-2 mt-10 tracking-wide text-textColor hover:bg-verde capitalize transition-colors duration-300 transform-all hover:text-white bg-white rounded-md focus:outline-none focus:ring focus:ring-opacity-80"
        >
          Reservar ahora
        </button>
      </div>

      <div
        class="w-full p-8 space-y-8 text-center border border-naranja rounded-lg"
      >
        <p class="font-medium uppercase text-textColor">Fechas Especiales</p>

        <h2 class="text-4xl font-semibold text-textColor uppercase">
          ${specialPrice}
        </h2>

        <p class="font-medium text-textColor">Por noche</p>

        <button
          class="w-full px-4 py-2 mt-10 tracking-wide text-white capitalize transition-colors duration-300 transform bg-naranja rounded-md hover:bg-verde focus:outline-none focus:bg-blue-500 focus:ring focus:ring-blue-300 focus:ring-opacity-80"
        >
          Reservar ahora
        </button>
      </div>
    </div>
  </div>
</div>
