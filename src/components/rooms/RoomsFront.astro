---
import { Image } from "astro:assets";
import Bungalow from "@assets/icons/rooms/Bungalow.astro";
import Glamping from "@assets/icons/rooms/Glamping.astro";
import Carousel from "@components/Common/Carousel.tsx";

interface Props {
  title: string;
  folderImage: string;
  description: string;
  beds: string;
  bathrooms: string;
  parking: string;
  type: string;
}
const { title, folderImage, description, beds, bathrooms, parking, type } =
  Astro.props;
---

<div class="flex">
  <h1
    class="text-2xl md:text-4xl font-bold text-textColor"
    transition:name={`title ${title}`}
  >
    {title}
  </h1>
</div>
<section class="overflow-hidden mx space-y-4 lg:flex flex-row gap-16">
  <div class="lg:w-1/2">
    <Carousel imageFolder={folderImage} client:load />
    <!-- Imagen -->
  </div>

  <div
    class="lg:w-1/2 space-y-2 flex flex-row md:flex-col items-center justify-center"
  >
    <p class="text-lg text-gray-600">{description}</p>
    <div class="flex items-center space-x-2 mt-4">
      <p class="text-lg font-semibold">{type}</p>
    </div>
  </div>
</section>
