---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import Banner from "@components/Common/Banner.astro";
import Timeline from "@components/about/TimeLine.tsx";
import { getI18N } from "@i18n/index";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
const { title, keywords, url } = i18n.SEO.about;
---

<Layout title={title} url={url} keywords={keywords}>
  <Banner title="About Us" className="h-44 md:h-96 bg-homeBanner" />
  <Container>
    <Timeline client:load />
  </Container>
</Layout>
