---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import Banner from "@components/Common/Banner.astro";
import ExpCard from "@components/experiences/ExpCard.astro";
---

<Layout title="Welcome to Astro.">
  <Banner title="Experiences" className="h-44 md:h-96 bg-homeBanner" />
  <Container>
    <ExpCard
      title="Swimming"
      body="Enjoy the refreshing waters and crystal-clear beaches. Perfect for a relaxing swim or fun with family."
    />
    <ExpCard
      className="md:flex-row-reverse flex-col "
      title="Hiking"
      body="Explore the beautiful natural landscapes and breathtaking views. Enjoy the fresh air and rejuvenating scenery."
    />
    <ExpCard
      title="Cycling"
      body="Discover the scenic routes and enjoy the fresh air. Cycling is a great way to explore the countryside and enjoy the outdoors."
    />
    <ExpCard
      className="md:flex-row-reverse flex-col"
      title="Camping"
      body="Experience the great outdoors and immerse yourself in nature. Camping is a great way to connect with nature and create unforgettable memories."
    />
    <ExpCard
      title="Diving"
      body="Dive into the crystal-clear waters and explore the underwater world. Enjoy the thrill of exploring the depths of the ocean."
    />
  </Container>
</Layout>
