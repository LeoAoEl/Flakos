---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import Banner from "@components/Common/Banner.astro";
import Contact from "@components/home/Contact.astro";
import Carousel from "@components/Common/Carousel.tsx";
import Cultural from "@components/home/Cultural.astro";
import MV from "@components/home/M&V.astro";
import RoomsCard from "@components/home/RoomsCard.astro";
import BannerContent from "@components/home/BannerContent.astro";
import { getI18N } from "@i18n/index";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
const { title, keywords, url } = i18n.SEO.home;
---

<Layout title={title} url={url} keywords={keywords}>
  <Banner
    title="Increible Hostel with Bungalow and Glamping rooms"
    content={true}
  >
    <BannerContent />
  </Banner>
  <Container>
    <RoomsCard />
    <MV />
  </Container>
  <Cultural />
  <Container>
    <Carousel imageFolder="ejemplo" client:load />
  </Container>
  <Contact />
</Layout>
